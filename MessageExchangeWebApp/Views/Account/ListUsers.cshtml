@model IEnumerable<MessageExchangeWebApp.Models.User>

@{
    ViewBag.Title = "ListUsers";
}

<h2>Управление пользователями</h2>

<table class="table">
    <tr>
        <th>
            Имя
        </th>
        <th>
            Фамилия
        </th>
        <th>
            Логин
        </th>
        <th>
            Пароль
        </th>
        <th>
            Электронная почта
        </th>
        <th>
            Роль
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.E_mail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            @Html.ActionLink("Изменить", "EditUser", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "DeleteUser", new { id=item.Id })
        </td>
    </tr>
}

</table>
